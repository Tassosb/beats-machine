<section class='auth-form'>
  <h1>Sign In</h1>

  <% if flash[:errors] %>
  <ul class='error-list'>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

  <form action="/session" method="post">
    <label>Username
      <input type="text" name="user[username]" value="<%= @user.username %>" placeholder="Tbar">
    </label>
    <label>Password
      <input type="password" name="user[password]" value="<%= @user.password %>" placeholder="password">
    </label>
    <input type="submit" value="Sign In">
  </form>

  <a href="/">Back to making beats!</a>
</section>
